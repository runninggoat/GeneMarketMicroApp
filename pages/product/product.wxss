/* pages/product.wxss */

.example-btn {
  position: fixed;
  bottom: 160rpx;
  right: 30rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-color: #232323;
  text-align: center;
}

.example-btn > text {
  position:absolute;
  left:0;
  bottom:30rpx;
  font-size: 30rpx;
  color: #FFFFFF;
}

.price-bar {
  position: fixed;
  display: flex;
  bottom: 0;
  width: 100%;
  height: 140rpx;
  background-color: #FFFFFF;
}

.price-bar > .contact {
  text-align: center;
  width: 140rpx;
  height:100%;
  padding:20rpx 10rpx;
  border-right: 1px solid #000000;
}

.price-bar > .price {
  height:100%;
}

.price-bar > .price > text {
  margin-left:20rpx;
  line-height: 140rpx;
  font-size: 60rpx;
  font-weight: 600;
}

.price-bar > .buy-btn {
  position: absolute;
  right: 0;
  height: 140rpx;
  width:310rpx;
  text-align:center;
  background-color: #DE8100;
}

.price-bar > .buy-btn > text {
  line-height: 140rpx;
  font-size: 40rpx;
  color: #FFFFFF;
}
